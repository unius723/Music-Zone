<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Search Header -->
        <LinearLayout
            android:id="@+id/searchHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_marginEnd="0dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/icon_back"
                android:contentDescription="@string/content_description_back_button"
                android:scaleType="fitCenter"
                android:padding="0dp" />

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="68dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/search_icon"
                android:src="@drawable/icon_search" />

            <TextView
                android:id="@+id/searchTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEARCH MUSIC"
                android:textColor="@color/dark_blue"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/press_start_2p_regular"
                android:letterSpacing="0.05" />
        </LinearLayout>

        <!-- Search Input Container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/searchInputContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@drawable/bg_search_input"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/searchHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/searchInput"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent"
                android:hint="TYPE TO SEARCH..."
                android:textColorHint="@color/gray_placeholder"
                android:textColor="@color/dark_blue"
                android:textSize="12sp"
                android:fontFamily="@font/press_start_2p_regular"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:inputType="text"
                android:maxLines="1"
                android:imeOptions="actionSearch"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:enabled="true"
                android:longClickable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/searchButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="52dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_button_gradient"
                android:src="@drawable/icon_search"
                android:contentDescription="@string/search_button"
                android:scaleType="centerInside"
                android:padding="1dp"
                android:focusable="true"
                android:clickable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Filter Buttons -->
        <HorizontalScrollView
            android:id="@+id/filterScrollView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/searchInputContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/filterAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="ALL"
                    android:textColor="@drawable/text_color_filter_selector"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/press_start_2p_regular"
                    android:background="@drawable/bg_filter_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/filterSongs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="SONGS"
                    android:textColor="@drawable/text_color_filter_selector"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/press_start_2p_regular"
                    android:background="@drawable/bg_filter_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/filterArtists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="ARTISTS"
                    android:textColor="@drawable/text_color_filter_selector"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/press_start_2p_regular"
                    android:background="@drawable/bg_filter_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/filterAlbums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="ALBUMS"
                    android:textColor="@drawable/text_color_filter_selector"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/press_start_2p_regular"
                    android:background="@drawable/bg_filter_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/filterPlaylists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="PLAYLISTS"
                    android:textColor="@drawable/text_color_filter_selector"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/press_start_2p_regular"
                    android:background="@drawable/bg_filter_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- SONGS Results Section -->
        <FrameLayout
            android:id="@+id/songsSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_section_card"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/filterScrollView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/songsHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SONGS"
                    android:textColor="@color/dark_blue"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/press_start_2p_regular"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/songsRecyclerView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/songsHeader"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/songsPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="No songs found"
                    android:textColor="@color/gray_placeholder"
                    android:textSize="10sp"
                    android:fontFamily="@font/press_start_2p_regular"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/songsHeader"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <!-- ARTISTS Results Section -->
        <FrameLayout
            android:id="@+id/artistsSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_section_card"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/songsSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/artistsHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ARTISTS"
                    android:textColor="@color/dark_blue"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/press_start_2p_regular"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/artistsRecyclerView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/artistsHeader"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/artistsPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="No artists found"
                    android:textColor="@color/gray_placeholder"
                    android:textSize="10sp"
                    android:fontFamily="@font/press_start_2p_regular"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/artistsHeader"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <!-- ALBUMS Results Section -->
        <FrameLayout
            android:id="@+id/albumsSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_section_card"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/artistsSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/albumsHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALBUMS"
                    android:textColor="@color/dark_blue"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/press_start_2p_regular"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/albumsRecyclerView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/albumsHeader"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/albumsPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="No albums found"
                    android:textColor="@color/gray_placeholder"
                    android:textSize="10sp"
                    android:fontFamily="@font/press_start_2p_regular"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/albumsHeader"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <!-- PLAYLISTS Results Section -->
        <FrameLayout
            android:id="@+id/playlistsSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_section_card"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/albumsSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/playlistsHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLAYLISTS"
                    android:textColor="@color/dark_blue"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/press_start_2p_regular"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/playlistsRecyclerView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/playlistsHeader"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/playlistsPlaceholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="No playlists found"
                    android:textColor="@color/gray_placeholder"
                    android:textSize="10sp"
                    android:fontFamily="@font/press_start_2p_regular"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/playlistsHeader"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <!-- All Content RecyclerView (shown when ALL filter is selected) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/allContentRecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:nestedScrollingEnabled="false"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/filterScrollView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
