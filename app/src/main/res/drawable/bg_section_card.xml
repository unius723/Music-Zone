<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#33000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <!-- Main card -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke
                android:width="1dp"
                android:color="@color/purple_border_alpha" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>
